{
    "tasks": {
      "start": "deno run --watch --allow-net --allow-read --allow-run --unstable-kv server.deno.ts"
    },
    "compilerOptions": {
      "allowJs": true,
      "lib": ["deno.window"]
    },
    "lint": {
      "include": ["./**/*.js", "./**/*.ts"],
      "rules": {
        "tags": ["recommended"],
        "include": ["ban-untagged-todo"],
        "exclude": ["no-unused-vars"]
      }
    },
    "fmt": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "semiColons": true,
      "singleQuote": false,
      "proseWrap": "preserve",
      "include": ["./**/*.js", "./**/*.ts"]
    }
  }